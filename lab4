#include <stdio.h>
#include <ctype.h>

int check_upper(int input) {
    if (isupper(input)) {
        return 1;
    } else {
        return 0;
    }
}

int check_lower(int input) {
    if (islower(input)) {
        return 1;
    } else {
        return 0;
    }
}

int check_digit(int input) {
    if (isdigit(input)) {
        return 1;
    } else {
        return 0;
    }
}

int check_space(int input) {
    if (isspace(input)) {
        return 1;
    } else {
        return 0;
    }
}

void check_character() {
    char input;
    printf("Enter a character: ");
    scanf(" %c", &input);
    if (check_upper(input)) {
        printf("%c is an uppercase character.\n", input);
    } else {
        printf("%c is not an uppercase character.\n", input);
    }
}

void check_lowercase() {
    char input;
    printf("Enter a character: ");
    scanf(" %c", &input);
    if (check_lower(input)) {
        printf("%c is a lowercase character.\n", input);
    } else {
        printf("%c is not a lowercase character.\n", input);
    }
}

void check_digit_character() {
    char input;
    printf("Enter a character: ");
    scanf(" %c", &input);
    if (check_digit(input)) {
        printf("%c is a digit character.\n", input);
    } else {
        printf("%c is not a digit character.\n", input);
    }
}

void check_space_character() {
    char input;
    printf("Enter a character: ");
    scanf(" %c", &input);
    if (check_space(input)) {
        printf("%c is a space character.\n", input);
    } else {
        printf("%c is not a space character.\n", input);
    }
}

void count_uppercase_characters() {
    char input;
    int count = 0;
    printf("Enter a string: ");
    scanf(" ");
    while ((input = getchar()) != '\n') {
        if (check_upper(input)) {
            count++;
        }
    }
    printf("Number of uppercase characters: %d\n", count);
}

void count_lowercase_characters() {
    char input;
    int count = 0;
    printf("Enter a string: ");
    scanf(" ");
    while ((input = getchar()) != '\n') {
        if (check_lower(input)) {
            count++;
        }
    }
    printf("Number of lowercase characters: %d\n", count);
}

void count_digit_characters() {
    char input;
    int count = 0;
    printf("Enter a string: ");
    scanf(" ");
    while ((input = getchar()) != '\n') {
        if (check_digit(input)) {
            count++;
        }
    }
    printf("Number of digit characters: %d\n", count);
}

void count_space_characters() {
    char input;
    int count = 0;
    printf("Enter a string: ");
    scanf(" ");
    while ((input = getchar()) != '\n') {
        if (check_space(input)) {
            count++;
        }
    }
    printf("Number of space characters: %d\n", count);
}

void check_string() {
    int choice;
    do {
        printf("\nPlease choose an option from the menu:\n");
        printf("1. Count number of uppercase characters\n");
        printf("2. Count number of lowercase characters\n");
        printf("3. Count number of digit characters\n");
        printf("4. Count number of space characters\n");
        printf("0. Exit\n");

        printf("Your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                count_uppercase_characters();
                break;

            case 2:
                count_lowercase_characters();
                break;

            case 3:
                count_digit_characters();
                break;

            case 4:
                count_space_characters();
                break;

            case 0:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice. Please try again.\n");
        }
    } while (choice != 0);
}

int main() {
    int choice;

    do {
        printf("\nPlease choose an option from the menu:\n");
        printf("1. Check if a character is uppercase\n");
        printf("2. Check if a character is lowercase\n");
        printf("3. Check if a character is adigit\n");
        printf("4. Check if a character is a space\n");
        printf("5. Check a string\n");
        printf("6. Count number of uppercase characters in a string\n");
        printf("7. Count number of lowercase characters in a string\n");
        printf("8. Count number of digit characters in a string\n");
        printf("9. Count number of space characters in a string\n");
        printf("0. Exit\n");

        printf("Your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                check_character();
                break;

            case 2:
                check_lowercase();
                break;

            case 3:
                check_digit_character();
                break;

            case 4:
                check_space_character();
                break;

            case 5:
                check_string();
                break;

            case 6:
                count_uppercase_characters();
                break;

            case 7:
                count_lowercase_characters();
                break;

            case 8:
                count_digit_characters();
                break;

            case 9:
                count_space_characters();
                break;

            case 0:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice. Please try again.\n");
        }
    } while (choice != 0);

    return 0;
}
